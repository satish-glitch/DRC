<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <isExposed>true</isExposed>

    <targets>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">

            <property 
                name="label" 
                type="String" 
                label="Field Label" 
                role="inputOnly" />

            <property 
                name="optionsJson" 
                type="String" 
                label="Picklist Options (JSON String)" 
                role="inputOnly" />

            <property 
                name="value" 
                type="String" 
                label="Selected Values" 
                role="outputOnly" />

        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>